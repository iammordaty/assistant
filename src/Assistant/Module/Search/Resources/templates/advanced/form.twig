<form data-role="track-search:form" method="GET" action="{{ url_for('search.advanced.index') }}" role="form" class="card g-3">
    <div class="card-header card-header-light">
        <h3 class="card-title">
            Wyszukiwanie zaawansowane
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-6 mb-3">
                <label class="form-label">Wykonawca</label>
                <input type="text" name="artist" value="{{ form.artist }}" class="form-control">
            </div>

            <div class="col-12 col-sm-6 mb-3">
                <label class="form-label">Tytuł</label>
                <input type="text" name="title" value="{{ form.title }}" class="form-control">
            </div>

            <div class="col-6 col-sm-4 mb-3">
                <label class="form-label">Gatunek</label>
                <input type="text" name="genre" value="{{ form.genre }}" placeholder="np.: House, Techno" class="form-control">
            </div>

            <div class="col-6 col-sm-4 mb-3">
                <label class="form-label">Wydawca</label>
                <input type="text" name="publisher" value="{{ form.publisher }}" placeholder="np.: Spectrum, Rejected" class="form-control">
            </div>

            <div class="col-6 col-sm-4 mb-3">
                <label class="form-label">Rok wydania</label>
                {% with %}
                    {% set year = "now"|date('Y') %}
                    <input type="text" name="year" value="{{ form.year }}" placeholder="np.: {{ year - 3 }} - {{ year }}, >= {{ year - 3 }}" class="form-control">
                {% endwith %}
            </div>

            <div class="col-6 col-sm-4 mb-3">
                <label class="form-label">Tonacja</label>
                <input type="text" name="initial_key" value="{{ form.initial_key }}" placeholder="np.: 4A, 4B, 5A" class="form-control">
            </div>

            <div class="col-6 col-sm-4 mb-3">
                <label class="form-label">
                    <span class="d-none d-sm-block">Liczba uderzeń na minutę</span>
                    <span class="d-block d-sm-none">BPM</span>
                </label>
                <input type="text" name="bpm" value="{{ form.bpm }}" placeholder="np.: 125 - 127, >= 130" class="form-control">
            </div>

            <div class="col-6 col-sm-4 mb-3">
                <label class="form-label">Data dodania</label>
                {% with %}
                    {% set year = "now"|date('Y') %}
                    {% set month = "now"|date('m.Y') %}
                    <input type="text" name="indexed_date" value="{{ form.indexed_date }}" placeholder="np.: {{ year - 3 }} - {{ year }}, >= {{ year - 3 }}, {{ month }}" class="form-control">
                {% endwith %}
            </div>

            <div class="col-sm-6 col-12 mb-3">
                <label class="form-label">Utwór</label>
                <input
                    type="text"
                    name="track"
                    value="{{ form.track|default }}"
                    class="form-control"
                    data-role="track-autocompleter"
                    data-url="{{ url_for('track.track.autocomplete') }}"
                    data-follow-on-select="false"
                    placeholder="Wprowadź nazwę wykonawcy lub tytuł utworu"
                >
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <button type="submit" name="submit" value="true" class="btn btn-primary">Szukaj</button>
    </div>
</form>

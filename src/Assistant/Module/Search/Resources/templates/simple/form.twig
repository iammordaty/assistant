<form method="GET" action="{{ urlFor('search.simple.index') }}" class="form-horizontal search-form-simple" role="form">
    <legend>Szybkie wyszukiwanie</legend>

    <!-- wpiąć autocompleter -->
    <div class="input-group col-md-12">
        <input type="text" name="query" value="{{ form.query }}" class="form-control input-lg" placeholder="Wprowadź nazwę wykonawcy lub tytuł utworu">
        <span class="input-group-btn">
            <button class="btn btn-default btn-lg" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
</form>
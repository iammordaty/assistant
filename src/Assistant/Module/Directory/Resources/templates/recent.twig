{% extends '@common/layout.twig' %}

{% block title 'Ostatnio dodane' %}

{% block content %}
    <div class="row row-deck row-cards">
        {% for month in recent %}
            {% if month.tracks %}
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                {% include '@common/breadcrumbs.twig' with { breadcrumbs: month.breadcrumbs } only %}
                            </h3>
                        </div>
                        <div class="card-table table-responsive">
                            {% set tracks = month.tracks|sort((trackOne, trackTwo) => trackOne.guid <=> trackTwo.guid) %}

                            {% include '@common/tracks.twig' with { tracks: tracks } only %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}

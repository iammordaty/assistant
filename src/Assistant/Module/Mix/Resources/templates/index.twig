{% extends '@common/layout.twig' %}

{% block title %}Mix{% endblock %}

{% block contentBlock %}
    <style>
        table.table-cross-hover {
            overflow: hidden;
            z-index: 1;
        }
        table.table-cross-hover td, th {
            position: relative;
        }
        table.table-cross-hover td:hover::after {
            background-color: #f5f5f5;
            content: '\00a0';
            height: 10000px;
            left: 0;
            position: absolute;
            top: -5000px;
            width: 100%;
            z-index: -1;
        }
    </style>

    <h3>Tracklista</h3>

    <form method="POST">
        <textarea name="listing" style="width: 100%; height: 250px">{{ form.listing }}</textarea>
        <footer>
            <button type="submit" name="submit" value="true" class="btn btn-default btn-lg pull-right">Prześlij</button>
        </footer>
    </form>
    <div class="clearfix"></div>

    {% if mix %}
        <h3>Mix</h3>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nazwa utworu</th>
                        <th>Gatunek</th>
                        <th>Długość</th>
                        <th>Rok</th>
                        <th>Tonacja</th>
                        <th>BPM</th>
                        <th>%</th>
                    </tr>
                </thead>
                <tbody>
                    {% for track in mix %}
                        <tr class="">
                            <td class="col-xs-5">
                                <span class="ellipsis track-name">
                                    {% set name = track.track.artist ~ ' - ' ~ track.track.title %}
                                    <a href="{{ urlFor('track.track.index', { guid: track.track.guid } )}}" title="{{ name }}">{{ name }}</a>
                                </span>
                            </td>
                            <td class="col-xs-2">
                                <a class="undecorated" href="{{ urlFor('search.advanced.index') }}?genre={{ track.track.genre }}">{{ track.track.genre }}</a>
                            </td>
                            <td class="col-xs-1">
                                {{ track.track.length|format_duration }}
                            </td>
                            <td class="col-xs-1">
                                <a class="undecorated" href="{{ urlFor('search.advanced.index') }}?year={{ track.track.year }}">{{ track.track.year }}</a>
                            </td>
                            <td class="col-xs-1">
                                <a class="undecorated" href="{{ urlFor('search.advanced.index') }}?initial_key={{ track.track.initialKey }}">{{ track.track.initialKey }}</a>
                            </td>
                            <td class="col-xs-1">
                                <a class="undecorated" href="{{ urlFor('search.advanced.index') }}?bpm={{ track.track.bpm }}">{{ track.track.bpm }}</a>
                            </td>
                            <td class="col-xs-1">
                                {%- if loop.index0 > 0 %} {{ track.similarityValue }}%{% else %}-{% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <h3>Siatka podobieństwa</h3>

        <table class="table table-hover table-cross-hover" style="font-size: 10px">
            <tr>
                <td>&nbsp;</td>
                {% for row in matrix %}
                    {% set name = row.track.artist ~ ' - ' ~ row.track.title %}
                    <td title="{{ row.track.artist }} - {{ row.track.title}}">
                        <a href="{{ urlFor('track.track.index', { guid: row.track.guid } )}}"  class="undecorated" title="{{ name }}">{{ row.track.title }}</a>
                    </td>
                {% endfor %}
            </tr>
            {% for row in matrix %}
                <tr>
                    {% set name = row.track.artist ~ ' - ' ~ row.track.title %}
                    <td title="{{ row.track.artist }} - {{ row.track.title}}">
                        <a href="{{ urlFor('track.track.index', { guid: row.track.guid } )}}"  class="undecorated" title="{{ name }}">{{ row.track.title }}</a>
                    </td>
                    {% for track in row.tracks %}
                        <td class="text-center" {% if track.similarityValue is empty %}style="background-color: #eaeaea"{% endif %}>{{ track.similarityValue|default('-') }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}